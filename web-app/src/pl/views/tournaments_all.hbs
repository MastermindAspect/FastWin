<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#if allTournaments.length}}
        {{#each allTournaments}}
            <div class="col">
                <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-text"><strong>{{this.tournamentName}}</strong></h3>
                    <p class="card-text"><strong>Game</strong>: {{this.game}}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/tournaments/{{this.id}}" type="button" class="btn btn-sm btn-outline-secondary">Check out</a>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <section class="jumbotron text-center">
            <div class="container">
                {{#if loggedIn}}
                    <h1 class="jumbotron-heading">Woops! Looks like there aren't any registered tournaments yet.</h1>
                    <p class="lead text-muted">Be the first one to create a tournament!</p>
                    <a href="/tournaments/create" class="btn btn-primary my-2">Create a tournament</a>
                {{/if}}        
            </div>
        </section>
    {{/if}}
</div>
